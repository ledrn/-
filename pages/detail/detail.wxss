.musicContent{
    padding:0 40rpx;
}
.detailImg{
    width: 100%;
    height: 400rpx;
}
.topContent{
    display: flex;
    font-size: 30rpx;
    padding: 20rpx 0;
    border-bottom: 1px solid #e9e9e9;
    position: relative;
    align-items:center;
}
.download{
    width: 28rpx;
    height:28rpx;
}
.app{
    position: absolute;
    top:15rpx;
    right: 0;
    border: 1px solid #343434;
    border-radius: 15px;
    font-size: 24rpx;
    color: #343434;
    padding: 5rpx 16rpx;
}
.downloadText{
    margin-right: 20rpx;
}